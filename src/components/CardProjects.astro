---
interface Props {
  title: String;
  description: String;
  titleFirstButton: string;
  titleSecondButton: string;
  source: string;
  alternateText: string;
  linkGithub: string;
  linkLive: string;
}

const {
  title,
  description,
  titleFirstButton,
  titleSecondButton,
  source,
  alternateText,
  linkGithub,
  linkLive,
} = Astro.props;
---

<div class="relative group">
  <img src={source} alt={alternateText} class="object-cover bg-no-repeat" />

  <div
    class="hidden group-hover:flex flex-col absolute top-0 left-0 w-full h-full text-center justify-center items-center bg-black bg-opacity-80 text-white p-4 transition-opacity"
  >
    <h2 class="text-xl font-semibold">{title}</h2>
    <p class="mt-2">{description}</p>
    <div class="mt-4">
      <!-- Botones -->
      <div class="flex flex-wrap gap-2">
        <a
          href={linkGithub}
          class="rounded-md px-3.5 py-2 m-1 overflow-hidden relative group cursor-pointer border-2 font-medium border-black text-black"
          target="_blank"
        >
          <span
            class="absolute w-64 h-0 transition-all duration-300 origin-center rotate-45 -translate-x-20 bg-black top-1/2 group-hover:h-64 group-hover:-translate-y-32 ease"
          ></span>
          <span
            class="relative text-black transition duration-300 group-hover:text-white ease"
            >{titleFirstButton}</span
          >
        </a>

        <a
          href={linkLive}
          class="rounded-md px-3.5 py-2 m-1 overflow-hidden relative group cursor-pointer border-2 font-medium border-black text-black"
          target="_blank"
        >
          <span
            class="absolute w-64 h-0 transition-all duration-300 origin-center rotate-45 -translate-x-20 bg-black top-1/2 group-hover:h-64 group-hover:-translate-y-32 ease"
            >{titleFirstButton}</span
          >
          <span
            class="relative text-black transition duration-300 group-hover:text-white ease"
            >{titleSecondButton}</span
          >
        </a>
      </div>
    </div>
  </div>
</div>
