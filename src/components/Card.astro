---
interface Props {
  title: String;
  description: String;
  titleFirstButton: string;
  titleSecondButton: string;
  source: string;
  alternateText: string;
  linkGithub: string;
  linkLive: string;
  bgColor?: string;
}

const {
  title,
  description,
  titleFirstButton,
  titleSecondButton,
  source,
  alternateText,
  linkGithub,
  linkLive,
  bgColor,
} = Astro.props;
---

<div
  class={`flex flex-col rounded-lg overflow-hidden w-full h-full shadow-[8px_10px_12px_#00000050] ${
    Astro.props.bgColor || "bg-[#1b1b1b]"
  }`}
>
  <!-- Carta -->
  <div class="flex flex-col flex-wrap gap-4">
    <img src={source} alt={alternateText} class="shadow-md h-full w-full" />
  </div>

  <div
    class="flex flex-wrap gap-2 bg-[#050505] text-white h-full flex-col justify-between p-6"
  >
    <div>
      <h3 class="font-bold text-2xl">{title}</h3>
      <p>{description}</p>
    </div>
    <div class="flex flex-wrap">
      <div class="flex">
        <a
          href={linkGithub}
          class="rounded-md px-3.5 py-2 m-1 overflow-hidden relative group cursor-pointer border-2 font-medium bg-black border-white text-white"
          target="_blank"
        >
          <span
            class="absolute w-64 h-0 transition-all duration-300 origin-center rotate-45 -translate-x-20 bg-white top-1/2 group-hover:h-64 group-hover:-translate-y-32 ease"
          ></span>
          <span
            class="relative transition duration-300 group-hover:text-black ease"
            >{titleFirstButton}</span
          >
        </a>
      </div>

      <div class="flex">
        <a
          href={linkLive}
          class="rounded-md px-3.5 py-2 m-1 overflow-hidden relative group cursor-pointer border-2 font-medium bg-black border-white text-white"
          target="_blank"
        >
          <span
            class="absolute w-64 h-0 transition-all duration-300 origin-center rotate-45 -translate-x-20 bg-white top-1/2 group-hover:h-64 group-hover:-translate-y-32 ease"
          ></span>
          <span
            class="relative transition duration-300 group-hover:text-black ease"
            >{titleSecondButton}</span
          >
        </a>
      </div>
    </div>
  </div>
</div>
